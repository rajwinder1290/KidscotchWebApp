@model IEnumerable<KidscotchWebApp.Models.ClothInfo>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Cloth Actions</h1>
        <p>View All Cloth Info</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Cloth Info</a>
    </p>
    <table class="table table-bordered">
        
        <thead class="thead-dark">
            <tr>
                <th>
                    Cloth Photo
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClothPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShopCategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClothCompany)
                </th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="width:20%">
                    <img src="~/cloths/@item.ClothInfoID@item.Extension" class="img-fluid" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    $ @Html.DisplayFor(modelItem => item.ClothPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShopCategory.ShopCategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClothCompany.ClothCompanyName)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-info mr-2" asp-route-id="@item.ClothInfoID">Edit</a>
                    <a asp-action="Details" class="btn btn-secondary mt-2 mr-2" asp-route-id="@item.ClothInfoID">Details</a>
                    <a asp-action="Delete" class="btn btn-danger mt-2" asp-route-id="@item.ClothInfoID">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>