@model IEnumerable<KidscotchWebApp.Models.ShopCategory>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Category Actions</h1>
        <p>View All Category</p>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Category</a>
    </p>
    <table class="table table-bordered">
        <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShopCategoryName)
            </th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShopCategoryName)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-info mr-2" asp-route-id="@item.ShopCategoryID">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ShopCategoryID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>