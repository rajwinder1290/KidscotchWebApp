@model KidscotchWebApp.Models.ShopCategory

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Category Actions</h1>
        <p>Delete Category Details</p>
    </div>
    <p>
        <a asp-action="Index" class="btn btn-primary">All Categories</a>
    </p>
    <hr />
    <div class="row">
        <div class="card col-md-4 border-0">
            <img class="card-img-top img-fluid" src="~/images/delete.png" alt="" style="width:100%">
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.ShopCategoryName)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.ShopCategoryName)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ShopCategoryID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>