@model KidscotchWebApp.Models.ShopCategory

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="text-center">
        <h1 class="display-4">Category Actions</h1>
        <p>Edit Category Details</p>
    </div>
    <p>
        <a asp-action="Index" class="btn btn-primary">All Categories</a>
    </p>
    <hr />
    <div class="row">
        <div class="card col-md-4 border-0">
            <img class="card-img-top img-fluid" src="~/images/edit.png" alt="" style="width:100%">
        </div>
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ShopCategoryID" />
                <div class="form-group">
                    <label asp-for="ShopCategoryName" class="control-label"></label>
                    <input asp-for="ShopCategoryName" class="form-control" />
                    <span asp-validation-for="ShopCategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save Category Details" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
