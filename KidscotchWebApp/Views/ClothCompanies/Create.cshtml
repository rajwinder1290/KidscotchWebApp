@model KidscotchWebApp.Models.ClothCompany

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="text-center">
        <h1 class="display-4">Cloth Company Actions</h1>
        <p>Add New Cloth Company</p>
    </div>
    <p>
        <a asp-action="Index" class="btn btn-primary">View All Cloth Companies</a>
    </p>
    <hr />
    <div class="row">
        <div class="card col-md-4 border-0">
            <img class="card-img-top img-fluid" src="~/images/save.png" alt="" style="width:100%">
        </div>
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ClothCompanyName" class="control-label"></label>
                    <input asp-for="ClothCompanyName" class="form-control" />
                    <span asp-validation-for="ClothCompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="About" class="control-label"></label>
                    <textarea asp-for="About" class="form-control"></textarea>
                    <span asp-validation-for="About" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save Cloth Company Details" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
